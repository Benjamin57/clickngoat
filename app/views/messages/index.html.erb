<div class="container">
  <h2>Message</h2>
  <% @messages.each do |message| %>
    <% if (message.user == current_user) %>
      <p style="margin-left: 20px"><strong>From:</strong> Me - <%= message.content %></p>  <br>
    <% else %>
      <p><strong>From:</strong> <%= message.user.email %> - <%= message.content %></p>  <br>
    <% end %>
  <% end %>

  <h3>Answer here</h3>
  <%= simple_form_for [@booking, @message] do |f| %>
     <% if @booking.errors.any? %>
       <div class="errors-container">
         <ul>
           <% @booking.errors.full_messages.each do |message| %>
             <li><%= message %></li>
           <% end %>
         </ul>
       </div>
     <% end %>
    <%= f.input :content %>
    <%= f.submit "Send", class: "btn-white" %>
  <% end %>

</div>
