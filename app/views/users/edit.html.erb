<div class="container">
  <div class="container-form">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <h2>Edit profile</h2>
        <%= simple_form_for(@user) do |f| %>

          <% if @user.errors.any? %>
            <div class="errors-container">
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :email %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Submit changes", class: "btn-yellow-sm btn-margin-top" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
