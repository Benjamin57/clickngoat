<h1>New player</h1>
<%= simple_form_for(@player) do |f| %>

  <% if @player.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name %>
  <%= f.input :city %>
  <%= f.input :description %>
  <%= f.input :level %>
  <%= f.input :price_per_day %>
  <%= f.input :position %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.submit "add a player", class: "btn btn-primary" %>
  <%= link_to "Back to home", players_path, class: "btn btn-danger" %>
<% end %>
