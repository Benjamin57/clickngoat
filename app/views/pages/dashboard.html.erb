<div class="container">
  <div class="row">
    <div class="tabs">
      <a class="tab active" href="" id="players-trigger">
        <h3>My players</h3>
      </a>
      <a class="tab" href="" id="bookings-trigger">
        <h3>Bookings</h3>
      </a>
    </div>
    <div id="players">
      <% @players.each do |player| %>
      <div class="message">
        <%= image_tag "#{player.photo}", style:'height:50px;width:50px;border-radius:50%;' %>
        <div class="message-name">
          <h3><%= player.name %></h3>
          <p><%= player.level %></p>
        </div>
        <div class="message-body">
          <p><strong>Description</strong></p>
          <p><%= player.description %></p>
        </div>
        <div class="message-status">
          <%=  link_to "Edit", edit_player_path(player),class: "btn-white" %>
          <% if (@all_bookings.select{|booking| booking.player_id == player.id}.blank?) %>
            <%=  link_to player_path(player), method: :delete, data: { confirm: "Are you sure?"  } do %>
                <i class="fas fa-trash-alt"></i>
          <% end  %>
        <% end %>
        </div>
      <% end %>
    </div>
    <div id="bookings" class="hidden">
      <h4>My players bookings</h4>
      <% @all_bookings.each do |booking| %>
        <% if booking.player.user == current_user %>
          <%= link_to show_new_booking_path(booking), style: "text-decoration:none;" do %>
            <div class="message">
                <%= image_tag "#{booking.player.photo}", style:'height:50px;width:50px;border-radius:50%;' %>
                <div class="message-name">
                  <h3><%= booking.player.name %></h3>
                  <p><%= booking.player.level %></p>
                </div>
                <div class="message-body">
                  <p><strong>Daily Price</strong></p>
                  <p><%= booking.player.price_per_day %></p>
                </div>
                <div class="message-body">
                  <p><strong>Total Price</strong></p>
                  <p><%= booking.total_price %></p>
                </div>
                <div class="message-body">
                  <p><strong>Status</strong></p>
                  <p><%= booking.status %></p>
                </div>
              </div>
          <% end %>
        <% end %>
      <% end %>
      <h4>My bookings</h4>
      <% @bookings.each do |booking| %>
      <div class="message">
        <%= image_tag "#{booking.player.photo}", style:'height:50px;width:50px;border-radius:50%;' %>
        <div class="message-name">
          <h3><%= booking.player.name %></h3>
          <p><%= booking.player.level %></p>
        </div>
        <div class="message-body">
          <p><strong>Daily Price</strong></p>
          <p><%= booking.player.price_per_day %></p>
        </div>
        <div class="message-body">
          <p><strong>Total Price</strong></p>
          <p><%= booking.total_price %></p>
        </div>
        <div class="message-body">
          <p><strong>Status</strong></p>
          <p><%= booking.status %></p>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</div>

