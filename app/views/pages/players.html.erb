<div class="container">
  <h1>Best players</h1>
<div class="container-gut" style="background-image:linear-gradient(-225deg, rgba(0,90,146,0.3) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path "pitch.jpg" %>);">
  <div class="flex-item goalkeeper">
      <% @gks.each do |gk| %>
        <%= link_to player_path(gk), style: "text-decoration:none;" do %>
        <div class="flex-element">
          <div class="flex-image">
            <%= cl_image_tag gk.photo, style: "border-radius:5px;", size: "80" %>
          </div>
          <div class="flex-list">
          <ul>
            <li><%= gk.name %></li>
            <li><% array = [] %>
            <% gk.reviews.each do |review|  %>
              <% array << review.rating %>
            <% end %>
            <% total = array.sum / gk.reviews.count.to_f %>

            <% count = 0 %>
            <% 5.times do %>
              <% if total > count %>
                <i class="fas fa-star"></i>
              <% else %>
                <i class="far fa-star"></i>
              <% end %>
              <% count += 1 %>
            <% end %></li>
          </ul>
        </div>
        </div>
        <% end %>
      <% end %>
  </div>
