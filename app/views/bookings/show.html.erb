<div class="container">
  <div class="container-form">
    <h2>Booking ID : <%= @booking.id %></h2>
    <p><%= @booking.number_of_days %> days</p>
    <p><%= @booking.total_price %> â‚¬</p>
    <p><%= @booking.status %></p>
    <% if @booking.player.user == current_user  %>
      <% if @booking.status == "Pending" %>
        <%= simple_form_for(@booking, url: update_new_booking_path(@booking)) do |f| %>
